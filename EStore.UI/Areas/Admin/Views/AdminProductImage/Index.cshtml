@model List<ResultProductImage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <div class="bg-secondary rounded p-4">
                <h6 class="mb-4 text-center">Product Images Edit Page</h6>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Product Image Path</th>
                            <th>Update</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.ProductName</td>
                                <td><img src="@item.ImagePath" width="50" height="50" style="margin-right:10px" /></td>
                                <td><a class="btn btn-info btn-sm" href="/Admin/AdminProductImage/UpdateProductImage/@item.Id">Update</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Admin/AdminProductImage/RemoveProductImage/@item.Id">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="/Admin/AdminProduct/Index/" class="btn btn-success btn-sm">Go Back Products</a>
                    @if (count == 6)
                    {
                        <a href="/Admin/AdminProductImage/CreateProductImage/" class="btn btn-success btn-sm">Create Product Image</a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

