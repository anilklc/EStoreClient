@model List<ResultFooter>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <div class="bg-secondary rounded p-4">
                <h6 class="mb-4 text-center">Footer Edit Page</h6>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Footer Address</th>
                            <th>Footer Phone</th>
                            <th>Footer Email</th>
                            <th>Update</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.FooterAddress</td>
                                <td>@item.FooterPhone</td>
                                <td>@item.FooterEmail</td>
                                <td><a class="btn btn-info btn-sm" href="/Admin/AdminFooter/UpdateFooter/@item.Id">Update</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Admin/AdminFooter/RemoveFooter/@item.Id">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (count == 0)
                {
                    <div class="text-center">
                        <a href="/Admin/AdminFooter/CreateFooter/" class="btn btn-success btn-sm">Create Footer</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


