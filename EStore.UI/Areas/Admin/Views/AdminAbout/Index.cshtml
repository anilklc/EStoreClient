@model List<ResultAbout>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <div class="bg-secondary rounded p-4">
                <h6 class="mb-4 text-center">Abouts Edit Page</h6>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>About Title</th>
                            <th>About Description</th>
                            <th>About Icon</th>
                            <th>Update</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.AboutTitle</td>
                                <td>@item.AboutDescription</td>
                                <td>@item.AboutIcon</td>
                                <td><a class="btn btn-info btn-sm" href="/Admin/AdminAbout/UpdateAbout/@item.Id">Update</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Admin/AdminAbout/RemoveAbout/@item.Id">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if(count == 0)
                {
                    <div class="text-center">
                        <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-success btn-sm">Create About</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

