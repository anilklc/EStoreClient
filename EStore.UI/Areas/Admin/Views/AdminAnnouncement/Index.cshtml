@model List<ResultAnnouncement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <div class="bg-secondary rounded p-4">
                <h6 class="mb-4 text-center">Announcements Edit Page</h6>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Announcement Title</th>
                            <th>Update</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td><a class="btn btn-info btn-sm" href="/Admin/AdminAnnouncement/UpdateAnnouncement/@item.Id">Update</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Admin/AdminAnnouncement/RemoveAnnouncement/@item.Id">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
               <div class="text-center">
                        <a href="/Admin/AdminAnnouncement/CreateAnnouncement/" class="btn btn-success btn-sm">Create Announcement</a>
               </div>
            </div>
        </div>
    </div>
</div>


