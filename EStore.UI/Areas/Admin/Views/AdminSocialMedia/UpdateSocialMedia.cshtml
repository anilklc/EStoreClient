@model ResultSocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-secondary rounded ">
        <div class="col-md-12">
            <div class="col-sm-12 col-xl-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Create Social Media</h6>
                    <p class="card-subtitle mb-4">Please fill in the information social media the vehicle completely.</p>
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label for="exampleInputSocialMediaName" class="form-label">Social Media Name</label>
                            <input type="text" class="form-control" id="exampleInputSocialMediaName" asp-for="SocialMediaName" aria-describedby="SocialMediaName">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputSocialMediaUrl" class="form-label">Social Media Url</label>
                            <input type="text" class="form-control" id="exampleInputSocialMediaUrl" asp-for="SocialMediaUrl" aria-describedby="SocialMediaUrl">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputSocialMediaIcon" class="form-label">Social Media Icon</label>
                            <input type="text" class="form-control" id="exampleInputSocialMediaIcon" asp-for="SocialMediaIcon" aria-describedby="SocialMediaIcon">
                        </div>
                        <button type="submit" class="btn btn-success">Create Social Media</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

