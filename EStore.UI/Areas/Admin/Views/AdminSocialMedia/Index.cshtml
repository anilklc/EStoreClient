@model List<ResultSocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <div class="bg-secondary rounded p-4">
                <h6 class="mb-4 text-center">SocialMedias Edit Page</h6>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>SocialMedia Name</th>
                            <th>SocialMedia Url</th>
                            <th>SocialMedia Icon</th>
                            <th>Update</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.SocialMediaName</td>
                                <td>@item.SocialMediaUrl</td>
                                <td>@item.SocialMediaIcon</td>
                                <td><a class="btn btn-info btn-sm" href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.Id">Update</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.Id">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-success btn-sm">Create SocialMedia</a>
                </div>
            </div>
        </div>
    </div>
</div>

