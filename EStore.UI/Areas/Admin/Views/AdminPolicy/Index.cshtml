@model List<ResultPolicy>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-secondary rounded ">
        <div class="col-md-12 text-center">
            <div class="col-sm-12 col-xl-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Policeis Edit Page</h6>
                </div>
            </div>
            <div class="col-sm-12 col-xl-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Policy Name</th>
                                <th scope="col">Policy Description</th>
                                <th scope="col">Policy Icon</th>
                                <th scope="col">Policy TabHref</th>
                                <th scope="col">Update Policy</th>
                                <th scope="col">Remove Policy</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.PolicyName</td>
                                    <td>@item.PolicyDescription</td>
                                    <td>@item.PolicyIcon</td>
                                    <td>@item.PolicyTabHref</td>
                                    <td><a class="btn btn-sm btn-info" href="">Update</a></td>
                                    <td><a class="btn btn-sm btn-danger" href="">Remove</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <td><a href="#" class="btn btn-sm btn-success">Create Policy</a></td>
                </div>
            </div>
        </div>
    </div>
</div>
