@using EStore.Dto.Worker
@model UpdateUserPassword
@{
    ViewData["Title"] = "UpdateUserPassword";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-secondary rounded ">
        <div class="col-md-12">
            <div class="col-sm-12 col-xl-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Update User Password</h6>
                    <p class="card-subtitle mb-4">Please fill in the information worker the vehicle completely.</p>
                    <form method="post">
                        <input type="hidden" asp-for="Username">
                        <div class="mb-3">
                            <label for="exampleInputPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword" asp-for="Password" aria-describedby="Password">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPasswordConfrim" class="form-label">Password Confrim</label>
                            <input type="password" class="form-control" id="exampleInputPasswordConfrim" asp-for="PasswordConfrim" aria-describedby="PasswordConfrim">
                        </div>
                        <button type="submit" class="btn btn-success">Update User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

