@model List<ResultReview>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <div class="bg-secondary rounded p-4">
                <h6 class="mb-4 text-center">Reviews Edit Page</h6>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Review Name</th>
                            <th>Review Title</th>
                            <th>Review Comment</th>
                            <th>Review Image Editor</th>
                            <th>Update</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.ReviewerName</td>
                                <td>@item.ReviewTitle</td>
                                <td>@item.ReviewComment</td>
                                <td><a class="btn btn-light btn-sm" href="/Admin/AdminReviewImage/Index/@item.Id">Image Editor</a></td>
                                <td><a class="btn btn-info btn-sm" href="/Admin/AdminReview/UpdateReview/@item.Id">Update</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Admin/AdminReview/RemoveReview/@item.Id">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="/Admin/AdminReview/CreateReview/" class="btn btn-success btn-sm">Create Review</a>
                </div>
            </div>
        </div>
    </div>
</div>

