@model List<ResultProductAdmin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <div class="bg-secondary rounded p-4">
            <h6 class="mb-4 text-center">Products Edit Page</h6>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Product Description</th>
                        <th>Product Price</th>
                        <th>Product Brand Name</th>
                        <th>Product Category Name</th>
                        <th>Product Cover Image</th>
                        <th>Product Stock Update</th>
                        <th>Product Images Update</th>
                        <th>Product Cover Image Update</th>
                        <th>Update</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductDescription</td>
                            <td>@item.Price</td>
                            <td>@item.BrandName</td>
                            <td>@item.CategoryName</td>
                            <td><img src="@item.ProductCoverImagePath" width="80" height="80" style="margin-right:10px" /></td>
                            <td><a class="btn btn-light btn-sm" href="/Admin/AdminProductStock/Index/@item.Id">Product Stock Update</a></td>
                            <td><a class="btn btn-light btn-sm" href="/Admin/AdminProductImage/Index/@item.Id">Update All Image</a></td>
                            <td><a class="btn btn-light btn-sm" href="/Admin/AdminProduct/UpdateProductCoverImage/@item.Id">Update Cover Image</a></td>
                            <td><a class="btn btn-info btn-sm" href="/Admin/AdminProduct/UpdateProduct/@item.Id">Update</a></td>
                            <td><a class="btn btn-danger btn-sm" href="/Admin/AdminProduct/RemoveProduct/@item.Id">Remove</a></td>

                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <a href="/Admin/AdminProduct/CreateProduct/" class="btn btn-success btn-sm">Create Product</a>
            </div>
        </div>
    </div>
</div>
</div>

