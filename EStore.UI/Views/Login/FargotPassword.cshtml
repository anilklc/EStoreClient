@using EStore.Dto.User
@model FargotPassword
@{
    ViewData["Title"] = "FargotPassword";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="login">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="login-form">
                    <form asp-action="FargotPassword" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <label>E-mail</label>
                                <input class="form-control" type="text" placeholder="E-mail / Username" asp-for="Email">
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

