@using EStore.Dto.User
@model UpdateFargotPassword
@{
    ViewData["Title"] = "UpdatePassword";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="login">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="login-form">
                    <form asp-action="UpdatePassword" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ResetToken" />
                        <div class="row">
                            <div class="col-md-12">
                                <label>Password</label>
                                <input class="form-control" type="password" placeholder="Password" asp-for="Password">
                            </div>
                            <div class="col-md-12">
                                <label>Password Confirm</label>
                                <input class="form-control" type="password" placeholder="PasswordConfirm" asp-for="PasswordConfirm">
                            </div>

                            <div class="col-md-12">
                                <button type="submit" class="btn">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

