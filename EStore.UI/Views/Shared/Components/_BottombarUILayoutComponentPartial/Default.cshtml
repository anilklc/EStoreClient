<div class="bottom-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-3">
                <div class="logo">
                    <a href="/Default/Index/">
                        <img src="~/EStore/img/logo.png" alt="Logo">
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="search">
                    <input type="text" placeholder="Search">
                    <button><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="col-md-3">
                <div class="user">
                    <a href="/Cart/Index/" class="btn wishlist">
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                    @if (ViewBag.IsUserLoggedIn)
                    {
                        <a href="/Account/Index/" class="btn account">
                            <i class="fa fa-user"></i>
                            <span>My Account (@ViewBag.UserName)</span>
                        </a>  
                    }
                </div>
            </div>
        </div>
    </div>
</div>