@model EStore.Dto.Login.RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="login">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="register-form">
                    <form asp-action="Index" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <label>First Name</label>
                                <input class="form-control" type="text" placeholder="First Name" asp-for="FirstName">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Last Name</label>
                                <input class="form-control" type="text" placeholder="Last Name" asp-for="LastName">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Username</label>
                                <input class="form-control" type="text" placeholder="Username" asp-for="Username">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>E-mail</label>
                                <input class="form-control" type="email" placeholder="E-mail" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Phone</label>
                                <input class="form-control" type="text" placeholder="Phone" asp-for="Phone">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Password</label>
                                <input class="form-control" type="password" placeholder="Password" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Retype Password</label>
                                <input class="form-control" type="password" placeholder="Retype Password" asp-for="PasswordConfirm">
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

